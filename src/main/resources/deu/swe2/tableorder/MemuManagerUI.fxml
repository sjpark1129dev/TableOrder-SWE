<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<!-- fx:controller="deu.swe2.tableorder.controller.POSController"-->
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <!-- 상단 버튼 영역 -->
    <top>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
           <children>
               <Button fx:id="addButton" text="추가" />
               <Button fx:id="deleteButton" text="삭제" />
            <Button mnemonicParsing="false" text="저장" />
           </children>
        </HBox>
    </top>

    <!-- 좌측 리스트뷰 -->
    <left>
        <TableView fx:id="productTable" prefHeight="400" prefWidth="300">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150" text="이름" />
                <TableColumn fx:id="priceColumn" prefWidth="150" text="가격" />
            </columns>
        </TableView>

    </left>

    <!-- 우측 텍스트박스 -->
    <right>
        <VBox alignment="TOP_CENTER" spacing="10" BorderPane.alignment="CENTER_RIGHT">
           <children>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                     <TextField fx:id="textBox1" layoutX="72.0" layoutY="14.0" prefHeight="23.0" prefWidth="114.0" />
                     <TextField fx:id="textBox2" layoutX="73.0" layoutY="52.0" prefHeight="23.0" prefWidth="112.0" />
                  <Label layoutX="18.0" layoutY="17.0" text="이름" />
                  <Label layoutX="21.0" layoutY="56.0" text="가격" />
                  <Label layoutX="15.0" layoutY="93.0" text="카테고리 " />
                  <SplitMenuButton layoutX="73.0" layoutY="89.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="112.0">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                      <MenuItem mnemonicParsing="false" text="Action 2" />
                    </items>
                  </SplitMenuButton>
                  <Button layoutX="145.0" layoutY="175.0" mnemonicParsing="false" text="추가" />
                  <Label layoutX="14.0" layoutY="147.0" prefHeight="15.0" prefWidth="94.0" text="카테고리 등록" />
                  <TextField layoutX="15.0" layoutY="175.0" prefHeight="22.0" prefWidth="116.0" />
               </children>
            </Pane>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" prefHeight="27.0" prefWidth="101.0" text="메뉴 사진" />
                  <Button layoutX="115.0" layoutY="163.0" mnemonicParsing="false" text="사진 넣기" />
               </children>
            </Pane>
           </children>
        </VBox>
    </right>

</BorderPane>
